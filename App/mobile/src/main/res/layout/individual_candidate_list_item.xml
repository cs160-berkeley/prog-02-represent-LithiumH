<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/candidate"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="100dp"
            android:layout_height="122dp"
            android:src="@drawable/candidate"
            android:id="@+id/candidatePic"
            android:paddingStart="10dp"
            android:paddingEnd="0dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:layout_alignParentStart="true"
            android:adjustViewBounds="true"
            android:maxHeight="150dp"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/candidatePic"
            android:paddingStart="10dp"
            android:paddingEnd="10dp"
            android:paddingTop="10dp"
            android:layout_alignParentEnd="true"
            android:layout_gravity="center_horizontal"
            android:orientation="vertical">
            <org.haojun.represent.XTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/candidateText"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:textSize="23sp"
                android:id="@+id/candidateName"/>
            <org.haojun.represent.XTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/candidateText"
                android:paddingStart="10dp"
                android:paddingEnd="20dp"
                android:textSize="13sp"
                android:id="@+id/candidateEmail"/>
            <org.haojun.represent.XTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingEnd="0dp"
                android:textSize="13sp"
                android:textColor="@color/candidateText"
                android:id="@+id/candidateWebsite"/>
            <org.haojun.represent.XTextViewBold
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:paddingEnd="0dp"
                android:textSize="13sp"
                android:textColor="@color/candidateText"
                android:id="@+id/candidateParty"/>
        </LinearLayout>
    </RelativeLayout>
    <org.haojun.represent.XTextViewBold
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingStart="30dp"
        android:paddingEnd="30dp"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textColor="@color/candidateText"
        android:text="@string/candidate_tweet"/>
</LinearLayout>