<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="0dp"
    android:orientation="vertical"
    tools:context="org.haojun.represent.VoteFragment">

    <org.haojun.represent.XTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/background"
        android:gravity="center"
        android:paddingTop="30dp"
        android:paddingBottom="5dp"
        android:textSize="20sp"
        android:textColor="@color/candidateDetail"
        android:text="@string/vote2012"/>
    <org.haojun.represent.XTextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:gravity="center_horizontal"
        android:textSize="20sp"
        android:padding="3dp"
        android:id="@+id/county_state"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/republicanRed">
            <org.haojun.represent.XTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/candidateDetail"
                android:text="@string/romney"/>
            <org.haojun.represent.XTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="0dp"
                android:paddingStart="5dp"
                android:textSize="25sp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/candidateDetail"
                android:id="@+id/romney"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="105dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/democratBlue">
            <org.haojun.represent.XTextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="5dp"
                android:gravity="center_horizontal"
                android:textColor="@color/candidateDetail"
                android:text="@string/obama"/>
            <org.haojun.represent.XTextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingEnd="5dp"
                android:paddingStart="0dp"
                android:textSize="25sp"
                android:gravity="center_horizontal|top"
                android:textColor="@color/candidateDetail"
                android:id="@+id/obama"/>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>
